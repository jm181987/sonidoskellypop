  <div id="controls-container">
    <label for="volume">Volumen:</label>
    <input type="range" id="volume" min="0" max="1" step="0.01" value="1" onchange="changeVolume(this.value)">
    
    <label for="pitch">Pitch:</label>
    <input type="range" id="pitch" min="0.5" max="2" step="0.1" value="1" onchange="changePitch(this.value)">
  </div>

  <div class="container">
    <h1>Reproductor de Audios by Jorge</h1>
    <div id="buttons-container">
      <button class="audio-button" onclick="playAudio('aplausos.mp3')">Aplausos</button>
      <button class="audio-button" onclick="playAudio('burra moria.mp3')">Burra Moria</button>
      <button class="audio-button" onclick="playAudio('chisme me encanta.mp3')">Chisme me encanta</button>
